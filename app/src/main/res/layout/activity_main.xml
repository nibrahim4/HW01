<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="99dp">

        <TextView
            android:id="@+id/bmi_lbl"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="32dp"
            android:text="Body Mass Index (BMI)"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="Weight"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/weight_Input"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/pound_lbl"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:text="lb"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </TableRow>

        <TextView
            android:id="@+id/height_lbl"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Height"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/feet_input"
                android:layout_width="343dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/feet_lbl"
                android:layout_width="96dp"
                android:layout_height="30dp"
                android:text="feet"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="63dp" >

            <EditText
                android:id="@+id/inches_input"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/inches_lbl"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:text="inches"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
        </TableRow>

        <Button
            android:id="@+id/calculate_Btn"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:text="Calculate BMI" />

        <TextView
            android:id="@+id/bmiResult_txt"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/resultMessage_txt"
            android:layout_width="378dp"
            android:layout_height="79dp"
            android:layout_marginStart="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>